{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "admin-server/**/*",
    "researcher-server/**/*",
    "utils/**/*",
    "bin/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app/**/*",
    "components/**/*"
  ]
} 