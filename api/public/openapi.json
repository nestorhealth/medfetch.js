                        "type": "object",
                        "properties": {
                          "resource": {
                            "type": "object",
                            "properties": {
                              "resourceType": {
                                "type": "string"
                              }
                            },
                            "required": [
                              "resourceType"
                            ]
                          }
                        }
                      }
                    }
                  },
                  "required": [
                    "id",
                    "resourceType",
                    "link",
                    "entry"
                  ]
                }
              }
            }
          },
          "404": {
