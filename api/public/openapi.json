                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "resourceType": {
                      "type": "string",
                      "enum": [
                        "Bundle"
                      ]
                    },
                    "link": {
                      "type": "array",
